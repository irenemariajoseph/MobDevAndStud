<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormAddress">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/expedia_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_button"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtShipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Set Pickup Location"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="#FFFA8888"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/namaPengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nama Penerima "
                    android:inputType="text"
                    android:textSize="17sp"  />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFA8888"
                    android:text="No. Handphone"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/noTelpPengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nomor Handphone Penerima"
                    android:inputType="number"

                    android:textSize="17sp"/>

                <TextView
                    android:textColor="#FFFA8888"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Lengkap"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/alamatLengkapPengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Alamat Lengkap Penerima"
                    android:textSize="17sp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"

                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapWords"

                    />

                <TextView
                    android:textColor="#FFFA8888"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Provinsi"

                    android:textColorHint="@color/HintWajib"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinProvinsi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/Provinsi"

                    />

                <TextView

                    android:textColor="#FFFA8888"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Kota"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/kotaPeng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Kota Penerima"
                    android:textSize="17sp"/>

                <TextView
                    android:textColor="#FFFA8888"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Kode Pos"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/kodePosPeng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Masukkan Kode Pos Penerima"
                    android:textSize="17sp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Notes Tambahan"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/NotesPeng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Notes Tambahan"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/biru"
                    android:hint="Notes :"
                    android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Warna Merah Wajib di Isi"
                        android:textColorHint="@color/HintWajib"
                        android:textStyle="bold" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnAlamatPeng"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/round_background_dark"
                    android:text="Done" />
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>