<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminTrackingUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Tracking System"
                android:textColor="@color/biru"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Log Out"
                android:textSize="10dp"
                android:textColor="@color/colorNegative"/>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_marginHorizontal="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/gambartrack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight=".5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView23"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_bold"
                                        android:text="Transaction ID: TR001"
                                        android:textColor="@android:color/black" />

                                    <Button
                                        android:id="@+id/btnTrack"
                                        android:layout_width="165dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/round_background_dark"
                                        android:fontFamily="@font/nunito_bold"
                                        android:text="Detail"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/putih"
                                        android:textSize="15sp"
                                        tools:ignore="RtlCompat" />

                                    <TextView
                                        android:id="@+id/textUpdate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_bold"
                                        android:text="Update Status"
                                        android:textColor="@android:color/black"
                                        android:textSize="10dp" />

                                    <Spinner
                                        android:id="@+id/SpinnerPickUp"
                                        android:layout_width="165dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/round_corner"
                                        android:backgroundTint="@color/ijomuda"
                                        android:entries="@array/UpdateTracking"
                                        android:scrollbarSize="5dp"

                                        android:textAlignment="center"
                                        android:textSize="2dp" />

                                    <Button
                                        android:id="@+id/btnUpgradeButton"
                                        android:layout_width="70dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="95dp"

                                        android:layout_marginTop="15dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/rounded_smallcorner"
                                        android:fontFamily="@font/nunito_bold"
                                        android:text="Update Done"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorNegative"
                                        android:textSize="8sp"
                                        android:textStyle="bold"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>