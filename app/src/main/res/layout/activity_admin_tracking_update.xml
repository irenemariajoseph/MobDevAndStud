<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminTrackingUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        tools:layout_editor_absoluteX="-34dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Tracking System"
                android:textColor="@color/biru"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlogoutkurir"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Log Out"
                android:textColor="@color/colorNegative"
                android:textSize="10dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listViewKurir"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg1"
            android:paddingTop="0dp"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginHorizontal="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"

                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/gambartrack" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight=".5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView23"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Update Status Transaction"
                                    android:textColor="@color/biru"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/txtid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="ID Transaksi"
                                    android:textColor="@android:color/black"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/idupdate"
                                    android:layout_width="157dp"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"

                                    android:background="@color/abu"
                                    android:fontFamily="@font/nunito_light"
                                    android:hint="Insert ID Transaction"
                                    android:padding="3dp"
                                    android:textColorHint="@color/biru"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/textUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="Status"
                                    android:textColor="@android:color/black"
                                    android:textSize="10dp" />

                                <Spinner
                                    android:id="@+id/spinnerstatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/biru"
                                    android:backgroundTint="@color/abu"
                                    android:entries="@array/UpdateTracking"
                                    android:scrollbarSize="5dp"
                                    android:textAlignment="center"
                                    android:textSize="3sp" />

                                <Button
                                    android:id="@+id/btnUpdatestatus"
                                    android:layout_width="70dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="91dp"

                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/biru"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="Update Done"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/putih"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>