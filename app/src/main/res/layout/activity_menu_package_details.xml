<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPackageDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/expedia_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_button"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtShipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:text="Fill The Package Details"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/dataBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_normal"
                    android:text="Nama barang"
                    android:textColor="@color/item" />

                <EditText
                    android:id="@+id/edtNamaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textCapWords" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView55"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito_normal"
                            android:text="Quantity"
                            android:textColor="@color/item" />

                        <EditText
                            android:id="@+id/edtQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:textSize="12sp"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito_normal"
                            android:text="Unit"
                            android:textColor="@color/item" />

                        <Spinner
                            android:id="@+id/spinUnit"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:entries="@array/unit" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView63"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunito_normal"
                            android:text="Weight"
                            android:textColor="@color/item" />

                        <EditText
                            android:id="@+id/edtWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_light"
                            android:hint="per Unit in Kg (Input Angka)"
                            android:inputType="numberDecimal"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbFragile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="150dp"
                            android:fontFamily="@font/nunito_normal"
                            android:text="Fragile" />

                        <CheckBox
                            android:id="@+id/cbAsuransi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_normal"
                            android:text="Insurance" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="165dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="7dp"
                                android:layout_marginRight="300dp"
                                android:fontFamily="@font/nunito_light"
                                android:text="We charge additional cost for fragile item by make wood packaging for it."
                                android:textSize="8sp" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="55dp"
                                android:fontFamily="@font/nunito_light"
                                android:text="We charge additional cost for additional insurance."
                                android:textSize="8sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Delivery Type "
                    android:textColor="@color/biru"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/deliveryType"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/PengambilanPaket"
                        android:inputType="textPassword"
                        android:scrollbarSize="5dp"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_light"
                        android:text=" Delivered To Post = Dikirim ke Pos Terdekat \n Pick up                 = Di ambil dari lokasi pengiriman"
                        android:textSize="7sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Distance"
                    android:textColor="@color/biru"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edtJarak"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_light"
                        android:hint="per km (input angka)"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnMaps"
                        android:layout_width="139dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner"
                        android:shadowDx="10"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Check Distance\n on Google Maps"
                        android:textAllCaps="false"
                        android:textColor="@color/ijotua"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@android:color/white"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorNegative"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/biru"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Done"
                    android:shadowColor="@color/abu"
                    android:textAllCaps="false"
                    android:textColor="@color/abu"
                    android:textSize="16sp"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>