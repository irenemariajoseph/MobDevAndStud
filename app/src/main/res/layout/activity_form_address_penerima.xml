<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormAddressPenerima">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/expedia_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/back_button"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/txtShipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Set Receiver Location"
                    android:textAlignment="textStart"
                    android:textColor="@color/biru"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/HintWajib"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/namaPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nama Penerima"
                    android:inputType="text"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No. Handphone"
                    android:textColor="@color/HintWajib"

                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/noTelpPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Nomor Handphone Penerima"
                    android:inputType="number"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Lengkap"
                    android:textColor="@color/HintWajib"

                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/alamatLengkapPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Alamat Lengkap Penerima"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapWords"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/HintWajib"

                    android:text="Provinsi"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinProvPen"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/Provinsi"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/HintWajib"

                    android:text="Kota"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/kotaPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Kota Penerima"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/HintWajib"

                    android:layout_marginTop="10dp"
                    android:text="Kode Pos"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/kodePosPenerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Masukkan Kode Pos Penerima"
                    android:textSize="10sp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Notes Tambahan"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/NotesPen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Notes Tambahan"
                    android:textSize="10sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/biru"
                    android:hint="Notes :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Warna Merah Wajib di Isi"
                    android:textColorHint="@color/HintWajib"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnFormPen"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/round_background_dark"
                    android:text="Done"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>