<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".aboutcompany">


    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/imgbengkel"

            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/aboutcompany"/>

        <TextView
            android:id="@+id/lblnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Company"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/biru"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnMenuViewer"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/round_background_dark"
                android:text="Know More"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:textColor="@color/putih" />


        </LinearLayout>
    </LinearLayout>

    <!-- Biodata -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginTop="15dp"
        android:alignmentMode="alignMargins">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/biru"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:text="::"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblalamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textStyle="bold"
                    android:text="Jl. Jend. Sudirman, RT.8/RW.3, Kuningan, Karet Kuningan"
                    android:textColor="@color/biru"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Telp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/biru"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblnotelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0878378372"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/biru"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btndirection"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_background_dark"
                    android:text="Direction Maps"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/putih" />

                <Button
                    android:id="@+id/btncall"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/round_background_dark"
                    android:text="Call Customer Service"
                    android:textAllCaps="false"
                    android:textColor="@color/putih" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

